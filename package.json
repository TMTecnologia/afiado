{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "afiado",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.12",
  "engines": {
    "node": ">=18.0.0 <23.0.0"
  },
  "author": {
    "name": "TMTecnologia",
    "url": "https://www.tmtecnologia.dev.br/",
    "email": "contato@tmtecnologia.dev.br"
  },
  "license": "GPL-3.0",
  "scripts": {
    "build": "next build",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "deploy": "bun run pages:build && wrangler pages deploy",
    "dev": "next dev --turbo",
    "postinstall": "fumadocs-mdx",
    "pages:build": "bunx convex codegen && bunx @cloudflare/next-on-pages",
    "preview": "bun run pages:build && wrangler pages dev",
    "start": "next start",
    "typecheck": "bunx convex codegen && tsc --noEmit"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "1.13.12",
    "@convex-dev/rate-limiter": "0.2.6",
    "@t3-oss/env-nextjs": "0.13.4",
    "clsx": "2.1.1",
    "convex": "1.24.1",
    "convex-helpers": "0.1.85",
    "fumadocs-core": "15.3.3",
    "fumadocs-mdx": "11.6.1",
    "fumadocs-ui": "15.3.3",
    "lucide-react": "0.511.0",
    "next": "15.3.2",
    "posthog-js": "1.246.0",
    "posthog-node": "4.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "3.3.0",
    "tw-animate-css": "1.2.5",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "4.1.7",
    "@types/mdx": "2.0.13",
    "@types/node": "22.14.1",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "postcss": "8.5.3",
    "tailwindcss": "4.1.4",
    "typescript": "5.8.3"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  }
}
